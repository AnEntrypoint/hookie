{
  "version": "1.0.0",
  "site": {
    "title": "Hookie - Visual Page Builder CMS",
    "description": "Build beautiful websites with a drag-and-drop page builder powered by GitHub",
    "theme": "light"
  },
  "header": {
    "enabled": true,
    "height": 64,
    "backgroundColor": "#ffffff",
    "borderBottom": "1px solid #e2e8f0",
    "position": "sticky",
    "padding": "0.75rem 2rem",
    "items": [
      {
        "type": "logo",
        "text": "Hookie"
      },
      {
        "type": "nav",
        "links": [
          { "label": "Home", "path": "#/" },
          { "label": "Components", "path": "#/pages/components" },
          { "label": "About", "path": "#/pages/about" },
          { "label": "Pricing", "path": "#/pages/pricing" },
          { "label": "Blog", "path": "#/pages/blog" }
        ]
      }
    ]
  },
  "footer": {
    "enabled": true,
    "backgroundColor": "#1e293b",
    "color": "#94a3b8",
    "padding": "3rem 2rem",
    "borderTop": "none",
    "sections": [
      {
        "title": "Product",
        "links": [
          { "label": "Features", "path": "#/" },
          { "label": "Pricing", "path": "#/pages/pricing" },
          { "label": "Components", "path": "#/pages/components" },
          { "label": "Blog", "path": "#/pages/blog" }
        ]
      },
      {
        "title": "Company",
        "links": [
          { "label": "About", "path": "#/pages/about" },
          { "label": "Contact", "path": "mailto:hello@hookie.dev" }
        ]
      },
      {
        "title": "Resources",
        "links": [
          { "label": "Documentation", "path": "#/docs" },
          { "label": "GitHub", "path": "https://github.com" }
        ]
      },
      {
        "title": "Legal",
        "text": "2026 Hookie. All rights reserved."
      }
    ]
  },
  "sidebar": {
    "enabled": false,
    "width": 250,
    "backgroundColor": "#f9f9f9",
    "collapsible": true
  },
  "grid": {
    "columns": 12,
    "gap": 16,
    "maxWidth": 1200
  },
  "spacing": {
    "unit": 8,
    "xs": 4,
    "sm": 8,
    "md": 16,
    "lg": 24,
    "xl": 32
  },
  "colors": {
    "primary": "#2563eb",
    "secondary": "#7c3aed",
    "success": "#10b981",
    "warning": "#f59e0b",
    "error": "#ef4444",
    "background": "#ffffff",
    "surface": "#f8fafc",
    "text": "#1e293b",
    "textSecondary": "#64748b",
    "border": "#e2e8f0"
  },
  "typography": {
    "fontFamily": "system-ui, -apple-system, sans-serif",
    "fontSize": {
      "xs": 12,
      "sm": 14,
      "base": 16,
      "lg": 18,
      "xl": 20,
      "2xl": 24
    },
    "lineHeight": {
      "tight": 1.2,
      "normal": 1.5,
      "relaxed": 1.75
    },
    "fontWeight": {
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    }
  }
}
